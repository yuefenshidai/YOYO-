/* pages/news/news.wxss */
page{
	background-color: #f7f7f7;
}
.tab_wrap{
	width: 100%;
	height: 96rpx;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 10;
}
.tab_wrap_item{
	flex: 1;
	text-align: center;
	font-size: 28rpx;
	line-height: 96rpx;
	border-bottom: 1rpx solid #e7e7e7;
}
.tab_wrap_item_active{
	color: #ff7c5e;
	border-bottom: 2rpx solid #ff7c5e;
}
.news_list_wrap{
	margin-top: 116rpx;
	background-color: #fff;
}
.news_list_wrap swiper{
	width: 100%;
	height: auto;
}
.news_list_wrap swiper-item{
	overflow: auto;
}