<view class="bgimg">
	<image src='http://www.happyinstallment.com/app/image/assess-result/app-bg.png'></image>
</view>
<view class='posContent'>
	<view class='result_carInfo flex'>
		<view class='carlogo'>
			<!-- <image src="{{'http://www.happyinstallment.com/app/image/Vehiclebrand-images/' + optionsInfo.chooseBrand.imgid+'.jpg'}}"></image> -->
			<image src="http://www.happyinstallment.com/app/image/Vehiclebrand-images/{{optionsInfo.chooseBrand.imgid}}.jpg"></image>
		</view>
		<view class='carinfo'>
			<view class='carname'>
				{{optionsInfo.chooseBrand.name}}
			</view>
			<view class='newcarprice'>新车指导价:</view>
			<view class='carinfoWrap flex'>
				<view>
					<image src='http://www.happyinstallment.com/app/image/assess-result/time.png'></image>
					<text>{{optionsInfo.date}}</text>
				</view>
				<view>
					<image src='http://www.happyinstallment.com/app/image/assess-result/position.png'></image>
					<text>成都</text>
				</view>
				<view>
					<image src='http://www.happyinstallment.com/app/image/assess-result/odometer.png'></image>
					<text>{{optionsInfo.driveLong}}万公里</text>
				</view>
			</view>
		</view>
	</view>
	<view class='result_reference'>
		<view class='reference_title'>车辆参考价格</view>
		<view class='reference_content flex'>
			<view   >
				<view class='posWrap'>
					<view>{{resultInfo.est_price_result[0]}}万元</view>
					<text>车商收购价</text>
				</view>
				<Ecanvas class="ec-canvas" 
					id='shougoujia'
					ec="{{ec}}"
					>
				</Ecanvas>
			</view>
			<view >
				<view class='posWrap'>
					<view>{{resultInfo.est_price_result[2]}}万元</view>
					<text>个人交易价</text>
				</view>
				<Ecanvas class="ec-canvas" 
					id='jiaoyijia'
					ec="{{ec}}"
					>
				</Ecanvas>
			</view>
			<view   >
				<view class='posWrap'>
					<view>{{resultInfo.est_price_result[1]}}万元</view>
					<text>车商卖出价</text>
				</view>
				<Ecanvas class="ec-canvas" 
					id='maichujia'
					ec="{{ec}}"
					>
				</Ecanvas>
			</view>
		</view>
	</view>
	<view class='result_linechart'>
		<view class='linechart_title'>地区参考价格</view>
		<view class='linechart_content'>
			<Ecanvas class="ec-canvas" 
					id='linechart'
					ec="{{ec}}"
					>
				</Ecanvas>
		</view>
	</view>
</view>