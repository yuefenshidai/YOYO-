page{
	background-color: #2e3f63;
	width: 100%;
	height: 100%;
}
.evaluationWrap{
	padding: 90rpx 50rpx;
}
.evaluationWrap_Inner{
	padding: 40rpx 30rpx;
	position: relative;
	background-color: #10244a;
}
.evaluationWrap_Inner .carLogo{
	position: absolute;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background-color: rgba(255,255,255,0.1);
	left: 50%;
	top: -50rpx;
	margin-left: -50rpx;
	padding: 10rpx;
	text-align: center;
}
.evaluationWrap_Inner .carLogo image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.Inner_List{
	padding-top: 50rpx;
}
.Inner_List .Inner_List_Title{
	color: #fff;
	font-size: 32rpx;
	text-align: center;
	line-height: 40rpx;
	margin-bottom: 20rpx;
}
.Inner_List_content text{
	color: #fff;
	font-size: 28rpx;
	display: inline-block;
	line-height: 80rppx;
}
.Inner_List_contentItem{
	align-items: center;
	height: 80rpx;
}
.Inner_List_contentItem image{
	flex: 0 0 16rpx;
	width: 16rpx;
	height: 30rpx;
	vertical-align: middle;
}
.Inner_List_contentItem text:first-child{
	width: 140rpx;
	flex: 0 0 140rpx;
}
.Inner_List_contentItem .theSecond{
	display: inline-block;
	flex:1;
	min-width: 420rpx;
	text-align: right;
	margin-right: 14rpx;
	color: #fff;
	font-size: 28rpx;
}
.offer_now{
	margin: 0 auto;
	width: 500rpx;
}
.offer_now button{
	border-radius: 36rpx;
	font-size: 30rpx;
	line-height: 80rpx;
	height: 80rpx;
	background-color: #00aef4;
	color: #fff;
}