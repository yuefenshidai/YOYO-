/* pages/home/child/packageA/illegal/child/illegal_add/illegal_add.wxss */
page{
	width: 100%;
	height: 100%;
	background-color: #f7f7f7;
}
.carNoWrap{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: #f7f7f7;
	z-index: 10;
}
.carNoWrap .carNo{
	margin-top: 30rpx;
	height: 100rpx;
	background-color: #fff;
	line-height:100rpx;
}
.carNoWrap .carNo label{
	align-items: center;
	padding: 0 30rpx;
}
.carNoWrap .carNo label text{
	display: inline-block;
	font-size: 30rpx;
	text-align: center;
}
.carNoWrap .carNo label .label{
	width: 100rpx;
	flex:0 0 100rpx;
}
.carNoWrap .carNo label .zone{
	width: 50rpx;
	flex: 0 0 50rpx;
}
.carNoWrap .carNo label image{
	width: 30rpx;
	flex: 0 0 30rpx;
	height: 20rpx;
	margin-left: 20rpx;
	vertical-align: middle;
	margin-right: 20rpx;
}
.carNoWrap .carNo label input {
	flex:1;
	font-size: 30rpx;
}
.nextStep{
	margin: 0 auto;
	background-color: #ff7c5e;
	color: #fff;
	text-align: center;
	line-height: 80rpx;
	width: 90%;
	margin-top: 80rpx;
}    
.carInfoWrap{
	width: 100%;
	margin-top: 30rpx;
	
}
.carInfoWrap .carInfoWrapItem{
	padding: 0 30rpx;
	background-color: #fff;
}
.carInfoWrap .carInfoWrapItem .carInfoWrapItem_Inner{
	border-bottom: 1rpx solid #f7f7f7;
	line-height: 100rpx;
	height: 100rpx;
	text-align: left;
}
.carInfoWrap .carInfoWrapItem .carInfoWrapItem_Inner text{
	display: inline-block;
	margin-right: 10rpx;
	font-size: 28rpx;
	flex: 0 0 120rpx;
	width: 120rpx;
	color: #6a6a6a;
}
.carInfoWrap .carInfoWrapItem .carInfoWrapItem_Inner input,.carInfoWrap .carInfoWrapItem .carInfoWrapItem_Inner picker{
	background-color: #fff;
	font-size: 28rpx;
	vertical-align: middle;
	height: 100rpx;
	flex:1;
}
.carInfoWrap .carInfoWrapItem .carInfoWrapItem_Inner picker text{
	font-size: 28rpx;
}
.tips{
	font-size: 24rpx;
	line-height: 26rpx;
	color: red;
	padding-left: 30rpx;
}
