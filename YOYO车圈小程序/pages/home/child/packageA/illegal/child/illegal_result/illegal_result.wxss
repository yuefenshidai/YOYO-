page{
	background-color: #f7f7f7;
	width: 100%;
	height: 100%;
}
.topWrap{
	background-color: #fff;
	padding:30rpx;
	margin-bottom: 20rpx;
}
.topWrap .leftInfo{
	flex: 0 0 280rpx;
	width: 280rpx;
}
.topWrap .leftInfo view{
	font-size: 28rpx;
	color: #ff7c5e;
	line-height: 1.6;
}
.topWrap .leftInfo view:first-child{
	font-weight: bold;
	color: #333;
}
.topWrap .rightIcon{
	flex: 1;
}
.topWrap .rightIcon image{
	width: 410rpx;
	height: 140rpx;
}
.resultListWrap{
	padding: 30rpx;
	background-color: #fff;
}
.resultListWrap .leftLineWrap{
	width: 30rpx;
	flex: 0 0 30rpx;
}
.resultListWrap .rightInfoWrap{
	flex: 1;
}
.rightInfoWrapItem{
	border-bottom: 2rpx solid #e7e7e7; 
	padding: 30rpx 0;
}
.rightInfoWrapItem view{
	line-height: 1;
	margin-bottom: 15rpx;
}
.rightInfoWrapItem view text{
	font-size: 28rpx;
}
.rightInfoWrapItem view:last-child{
	margin-bottom: 0rpx;
}
.statusBar text{
	width: 50%;
	flex: 0 0 50%;
}
.statusBar text:nth-of-type(2){
	text-align: right;
}
.thingsBar text:first-child,.addressBar text:first-child{
	display: block;
	max-width: 560rpx;
	flex: 0 0 560rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.thingsBar text:last-child,.addressBar text:last-child{
	flex: 1;
	text-align: right;
}
.leftLineWrap{
	padding-top: 36rpx;
}
.leftLineWrap text{
	display: block;
	width: 16rpx;
	height: 16rpx;
	background-color:#999;
	border-radius: 50%;
	margin-bottom: 10rpx;
}
.leftLineWrap view{
	width: 2rpx;
	height: 130rpx;
	background-color: #ccc;
	margin-left: 8rpx;
	margin-bottom: 20rpx;
}