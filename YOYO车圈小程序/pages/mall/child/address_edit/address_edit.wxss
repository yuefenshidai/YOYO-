.address_edit_container {
  padding-top: 20rpx;
  background: #F7F7F7;
}

.address_edit_container view {
  /* background: chartreuse; */
  padding: 0 30rpx;
  height: 80rpx;
  border-bottom: 1rpx solid rgb(231, 231, 231);
  background: white;
}

.address_edit_container view text,.address_edit_container view input{
 display: inline-block;
 font-size: 26rpx;
 line-height: 80rpx;

